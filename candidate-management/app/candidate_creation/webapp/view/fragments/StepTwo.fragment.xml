<core:FragmentDefinition xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:form="sap.ui.layout.form">
 
    <WizardStep id="StepTwo"
        title="Adres"
        validated="false"
		activate="true">
        <Text class="sapUiSmallMarginBottom"
            text="Geef de woonplaats van de kandidaat op. Deze informatie is essentieel om de kandidaat correct te identificeren en eenvoudig contact met hen op te nemen."/>

        <form:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout">

            <Label text="Stad" required="true"/>
            <Input required="true" value="{candidateModel>/address>city}"
			placeholder="Bv. Antwerpen"/>

            <Label text="Postcode" required="true"/>
            <Input  required="true" value="{candidateModel>/address>postCode}" 
			placeholder="Bv. 2000"/>

            <Label text="Straat" required="true"/>
            <Input  required="true" value="{candidateModel>/address>street}" 
			placeholder="Bv. Tramstraat"/>

            <Label text="Nummer" required="true"/>
            <Input type="Number" required="true" value="{candidateModel>/address>number}" 
			placeholder="Bv. 2"/>

            <Label text="Bus" required="false"/>
            <Input type="Number" required="false" value="{candidateModel>/address>appartment}" 
			placeholder="Bv. 4D"/>

            <Label text="Land" required="true"/>
            <Select forceSelection="false" selectedKey="{candidateModel>/address>country}" 
            items="{path: '/Countries',sorter: { path: 'descr' }}">
              <core:Item key="{code}" text="{descr}" />
            </Select>


          
        </form:SimpleForm>
    </WizardStep>
    
</core:FragmentDefinition>
